<% layout('../layout') -%>

<div class="container" id="products">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2" id="form-products">

			<h2 class="text-center">Add a new product to ClickChic!</h2>
            <p class="lead text-center">People can show the product and buy it throw our application.</p>

            <hr />

            <div class="success-add"></div>

			<form class="form-horizontal" role="form" style="margin-top: 40px;">
				<div class="form-group">
					<label for="inputModel" class="col-sm-2 control-label">Title</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" name="model" placeholder="Title">
				    </div>
				</div>
				
				<div class="form-group">
				    <label for="inputDesc" class="col-sm-2 control-label">Description</label>
				    <div class="col-sm-10">
				      <textarea rows="4" class="form-control" name="description" placeholder="Description"></textarea>
				    </div>
			  	</div>

			  	<div class="form-group">
			  		<label for="inputStyle" class="col-sm-2 control-label">Style</label>
			  		<div class="col-sm-10">
			  			<select class="form-control" name="style">
						  <option value="Casual">Casual</option>
						  <option value="Vintage">Vintage</option>
						  <option value="Alternative">Alternative</option>
						</select>
			  		</div>
			  	</div>

			  	<div class="form-group">
			  		<label for="inputSize" class="col-sm-2 control-label">Size</label>
			  		<div class="col-sm-10">
			  			<select class="form-control" name="size">
						  <option value="36">36</option>
						  <option value="38">38</option>
						  <option value="40">40</option>
						  <option value="42">42</option>
						  <option value="44">44</option>
						  <option value="46">46</option>
						</select>
			  		</div>
			  	</div>

			  	<div class="form-group">
			  		<label for="inputColor" class="col-sm-2 control-label">Color</label>
			  		<div class="col-sm-10">
			  			<select class="form-control" name="color">
						  <option value="Red">Red</option>
						  <option value"Blue">Blue</option>						  
						</select>
			  		</div>
			  	</div>

			  	<div class="form-group">
					<label for="inputPridce" class="col-sm-2 control-label">Price</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" name="price" placeholder="Price">
				    </div>
				</div>
		
			  
			  	<div class="form-group">
				    <div class="col-sm-offset-2 col-sm-10">
				      <button id="send-product" class="btn btn-primary">Create Product</button>
				    </div>
			  	</div>
			</form>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(function(){
		$("#send-product").on('click', function(){

			var title 		= $("input[name=model]").val();
			var desc 		= $("textarea[name=description]").val();
			var style 		= $("select[name=style]").val();
			var size 		= $("select[name=size]").val();
			var color 		= $("select[name=color]").val();
			var price 		= $("input[name=price]").val();

			$.post("/api/products", {model: title, description: desc, style: style,
				size: size, color: color, price: price })
				.done(function(){
					// Reset form fields
					$("input[name=model]").val("");
					$("textarea[name=description]").val("");
					$("input[name=price]").val("");
				});
		});
	});
</script>